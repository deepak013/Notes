<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dg.gautam.deepak.notes">

    <application
        android:allowBackup="true"
        android:icon="@drawable/my_logo_520"
        android:label="@string/app_name"
        android:roundIcon="@drawable/my_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddNotes" />
        <activity android:name=".EditNotesActivity" />
        <activity
            android:name=".notes.FavouriteNotes"
            android:label="@string/title_activity_favourite_notes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AboutActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>

</manifest>